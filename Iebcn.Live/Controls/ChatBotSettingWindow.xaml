                    <Label VerticalAlignment="Top" Content="冷场播报话术（一行一条）：" />
                    <CheckBox Margin="33,0,0,0" BorderBrush="#FF000000" Content="随机" ToolTip="随机朗读内容（默认顺序朗读）" IsChecked="{Binding RndReadSilenceText}" />
